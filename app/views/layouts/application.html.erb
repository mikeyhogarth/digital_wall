<!DOCTYPE html>
<html>
<head>
  <title>DigitalWall</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  
        <header>
          <div id = "auth_controls">
                  <%= link_to "Log Out", log_out_path if current_user %>
          </div>
	</header>
  
  	<%= yield %>

  	<%= yield :document_ready %>

	<% unless(flash.empty?) %>
          <% flash.each do |name, msg| %>
            <%= js add_gritter(msg, :title => "Notice" ,:image => :notice) %>      
            <% end %>
	<% end %>
</body>
</html>
