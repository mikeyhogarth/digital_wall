<!DOCTYPE html>
<html>
<head>
  <title>DigitalWall</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id = "container">
    <header>
	  <h1><%= link_to "Digital Wall", clients_path %> </h1>
	  <div id = "auth_controls">
	    <%= link_to "Manage Users", users_path if current_user && current_user.administrator? %>
  	    <%= link_to "Log Out", log_out_path if current_user %>
	  </div>
	</header>
	<nav id="breadcrumbs">
		<% if(current_user.administrator?) %>
			<%= link_to "Client List", clients_path %> 
			<% if(content_for? :breadcrumbs)%> &raquo; <% end %>
		<% end %>
	<%= yield :breadcrumbs %>
	</nav>

  	<%= yield %>

  	<%= yield :document_ready %>

	<%= render "shared/flash_messages" %>
  </div>
</body>
</html>
