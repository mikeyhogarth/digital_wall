<h1>
  <%= @presentation.name %>
</h1>
<p>
  <%= @presentation.description %>
</p>

<%= link_to "Back to #{@client.name} presentations", client_presentations_url(@client) %>

<hr />

<h2>Concepts</h2>

<ul>
<% @presentation.concepts.each do |concept| %>
	
	<div>
	<%= image_tag concept.image.url(:thumbnail) %>
	<li><%= concept.name %></li>
	</div>
<% end %>
</ul>

<h2>Add a concept:</h2>
<%= form_for([@presentation.client, @presentation, @presentation.concepts.build]) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
 	<%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_client_presentation_path(@presentation.client, @presentation) %> |
<%= link_to 'Back', client_presentations_path %>
